<div>
  <p>Movements for <%= @category.name %></p>
  <p>Total Amount: <%= @total_amount %></p>
</div>

<div>
  <% @movements.each do |movement| %>
    <ul>
      <li>
        <%= movement.name.titleize %>
      </li>
      <li>
        Date: <%= movement.created_at.strftime("%Y-%m-%d") %>
      </li>
      <li>
        <div>
          <p>TOTAL PAYMENT:</p>
          <p><%=number_to_currency(movement.amount) %></p>
        </div>
      </li>
    </ul>
  <% end %>
</div>

<div>
  <%= link_to "Add a New Transaction", new_category_movement_path(@category) %>
</div>
